{% extends 'baseAdmin.html.twig' %}

{% block body %}
    <h1>Branches list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Hours</th>
                <th>Address</th>
                <th>Phone</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for branch in branches %}
            <tr>
                <td><a href="{{ path('branch_show', { 'id': branch.id }) }}">{{ branch.id }}</a></td>
                <td>{{ branch.name }}</td>
                <td>{{ branch.hours }}</td>
                <td>{{ branch.address }}</td>
                <td>{{ branch.phone }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('branch_show', { 'id': branch.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('branch_edit', { 'id': branch.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('branch_new') }}">Create a new branch</a>
        </li>
    </ul>
{% endblock %}
