{% extends 'baseAdmin.html.twig' %}

{% block body %}
    <h1>Branch</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ branch.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ branch.name }}</td>
            </tr>
            <tr>
                <th>hours</th>
                <td>{{ branch.hours }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ branch.address }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ branch.phone }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('branch_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('branch_edit', { 'id': branch.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
