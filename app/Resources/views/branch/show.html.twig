{% extends 'baseAdmin.html.twig' %}

{% block body %}
    <div class="container show-container">
        <h1>Sucursal</h1>

        <table id="showSectionTable" class="display dataTable" cellspacing="0" width="100%">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ branch.id }}</td>
                </tr>
                <tr>
                    <th>Nombre</th>
                    <td>{{ branch.name }}</td>
                </tr>
                <tr>
                    <th>Horas de Atención</th>
                    <td>{{ branch.hours }}</td>
                </tr>
                <tr>
                    <th>Dirección</th>
                    <td>{{ branch.address }}</td>
                </tr>
                <tr>
                    <th>Teléfono</th>
                    <td>{{ branch.phone }}</td>
                </tr>
            </tbody>
        </table>

        <div class="row-fluid btn-container clearfix">
            <a href="{{ path('branch_edit', { 'id': branch.id }) }}" class="btn btn-primary">Editar</a>
            {{ form_start(delete_form) }}
                <input type="submit" value="Eliminar" class="btn btn-primary">
            {{ form_end(delete_form) }}
        </div>
    </div>
{% endblock %}
