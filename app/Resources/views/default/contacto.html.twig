{% extends 'base.html.twig' %}

{% block body %}
    <div class="container home-container contact-container">
        <img class="logo" src="{{ asset('bundles/app/img/home/logo.png') }}" alt="Del Rodeo Logo">
        <div class="header clearfix">
            {% include 'Partials/publicNav.html.twig' %}
        </div>

        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner" role="listbox">
                <div class="item active">
                    <img src="{{ asset('bundles/app/img/contact/banner.png') }}" alt="Del Rodeo Slider Img">
                </div>
            </div>
        </div>

        <div class="row marketing">
            <div class="col-lg-offset-1 col-lg-10 box text-center form contact-form-container">
                <h3>queremos conocer tus opiniones</h3>
                <p>
                    Te invitamos a que nos cuentes tu experienia en nuestros restaurantes
                    <div id="confirmationMessage" class="alert alert-success hide">Tu mensaje ha sido enviado, gracias</div>
                </p>

                <form action="{{path('email_contact')}}" method="post" id="contactForm" class="contact-form">
                    <input type="text" name="name" id="name" required placeholder="Nombre y apellido">
                    <input type="integer" name="phone" id="phone" required placeholder="teléfono">
                    <input type="email" name="email" id="email" required placeholder="correo electrónico">
                    <input type="text" name="subject" id="subject" required placeholder="asunto">
                    <textarea name="messageContent" id="messageContent" cols="24" rows="6" required placeholder="¿Qué quieres decirnos?"></textarea>
                    <input type="submit" value="Enviar" class="btn btn-primary">
                </form>
            </div>
        </div>
    </div>
{% endblock %}
