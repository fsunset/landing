{% extends 'baseAdmin.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row title-container clearfix">
            <h1 class="pull-left">Platos ({{ items|length }} total)</h1>
            <a href="{{ path('item_new') }}" class="btn btn-primary">Nuevo Plato</a>
        </div>

        <div class="row container list-container">
            <table id="itemTable" class="display dataTable" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>CÃ³digo</th>
                        <th>Nombre</th>
                        <th>Precio Unitario</th>
                        <th>Precio en Combo</th>
                        <th>Destacado</th>
                        <th>Creado</th>
                        <th>Activo</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                {% for item in items %}
                    <tr>
                        <td><a href="{{ path('item_show', { 'id': item.id }) }}">{{ item.id }}</a></td>
                        <td>{{ item.code }}</td>
                        <td>{{ item.name }}</td>
                        <td>{{ item.unitaryPrice }}</td>
                        <td>{{ item.comboPrice }}</td>
                        <td>{% if item.isFeatured %}Yes{% else %}No{% endif %}</td>
                        <td>{% if item.createdAt %}{{ item.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td>{% if item.isActive %}Yes{% else %}No{% endif %}</td>
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('item_show', { 'id': item.id }) }}">Ver</a>
                                </li>
                                <li>
                                    <a href="{{ path('item_edit', { 'id': item.id }) }}">Editar</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
