{% extends 'baseAdmin.html.twig' %}

{% block body %}
    <div class="container show-container">
        <h1>Producto</h1>

        <table id="showSectionTable" class="display dataTable" cellspacing="0" width="100%">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ item.id }}</td>
            </tr>
            <tr>
                <th>CÃ³digo</th>
                <td>{{ item.code }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ item.name }}</td>
            </tr>
            <tr>
                <th>Precio Unitario</th>
                <td>{{ item.unitaryPrice }}</td>
            </tr>
            <tr>
                <th>Precio Combo</th>
                <td>{{ item.comboPrice }}</td>
            </tr>
            <tr>
