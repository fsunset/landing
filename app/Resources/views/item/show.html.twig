                <th>Creado</th>
                <td>{% if item.createdAt %}{{ item.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Activo</th>
                <td>{% if item.isActive %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

        <div class="row-fluid btn-container clearfix">
            <a href="{{ path('item_edit', { 'id': item.id }) }}" class="btn btn-primary">Editar</a>
            {{ form_start(delete_form) }}
                <input type="submit" value="Eliminar" class="btn btn-primary">
            {{ form_end(delete_form) }}
        </div>
    </div>
{% endblock %}
