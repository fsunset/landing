{% extends 'baseAdmin.html.twig' %}

{% block body %}
    <div class="container show-container">
        <h1>Texto Legal</h1>

        <table id="showSectionTable" class="display dataTable" cellspacing="0" width="100%">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ legal.id }}</td>
            </tr>
            <tr>
                <th>Titulo</th>
                <td>{{ legal.title }}</td>
            </tr>
            <tr>
                <th>Contenido</th>
                <td>{{ legal.content|nl2br }}</td>
            </tr>
        </tbody>
    </table>

        <div class="row-fluid btn-container clearfix">
            <a href="{{ path('legal_edit', { 'id': legal.id }) }}" class="btn btn-primary">Editar</a>
            {{ form_start(delete_form) }}
                <input type="submit" value="Eliminar" class="btn btn-primary">
            {{ form_end(delete_form) }}
        </div>
    </div>
{% endblock %}
